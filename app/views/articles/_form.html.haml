= form_for(@article) do |f|
  %ul
    - @article.errors.full_messages.each do |error|
      %li
        = error
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :body
    = f.text_field :body
  %p
    = f.select :body, (1..5).to_a
  %p
    = f.collection_select(:author_id, User.all, :id, :email)

  %p
    = f.submit
