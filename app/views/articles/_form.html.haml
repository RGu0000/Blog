= form_for(@article) do |f|
  - if @article.errors.any?
    %ul
      - @article.errors.full_messages.each do |error|
        %li
          = error
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :body
    = f.text_area :body, size: "150 x 20"
  %p
    /= f.select :body, (1..6).to_a
  %p
    = f.collection_select(:author_id, User.all, :id, :email)
  %p
    = f.label :tag_list
    = f.text_field :tag_list
  %p
    = f.submit
