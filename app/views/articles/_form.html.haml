= form_for @article_form, url: articles_path, as: :articl do |f|
  - if @article_form.errors.any?
    %ul
      - @article_form.errors.full_messages.each do |error|
        %li
          = error
  %p
    = f.label :title, "Article title:"
    = f.text_field :title
  %p
    = f.label :body, "Body of the article:"
    = f.text_area :body, size: "150 x 20"
  %p
    = f.label :tags_string, "Specify article tags:"
    = f.text_area :tags_string, value: @article_form.all_tags
  %p
    = f.submit
