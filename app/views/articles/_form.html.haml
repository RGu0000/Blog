= form_for(@article) do |f|
  - if @article.errors.any?
    %ul
      - @article.errors.full_messages.each do |error|
        %li
          = error
  %p
    = f.label :title, "Article title:"
    = f.text_field :title
  %p
    = f.label :body, "Body of the article:"
    = f.text_area :body, size: "150 x 20"
  %p
    = f.label :tags_string, "Specify article tags:"
    = text_field_tag(:tags_string)
    = f.fields_for :tags do |tag|
      = tag.text_field :name
  %p
    = f.submit
