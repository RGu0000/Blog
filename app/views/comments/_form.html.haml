= form_for [@article, @comment], url: article_comments_path(@article) do |f|
  - if @comment.errors.any?
    %ul
      - @comment.errors.full_messages.each do |error|
        %li
          = error
  %p
    = f.label :body, "Add a new comment:"
    = f.text_area :body, size: "100 x 5"
  %p
    = f.submit
